---
import Card from '@components/generic/Card.astro';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  imgSrc: ImageMetadata;
  imgAlt: string;
  description: string;
  color?: string | undefined;

}


const { title, imgAlt, imgSrc, description } = Astro.props;

---

<Card >
  <h3 class='orbitron text-lg md:text-xl'>{title}</h3>
  <div class='rounded-lg border-3 border-black my-4 h-56'>
    <Image
      src={imgSrc}
      alt={imgAlt}
      width={800}
      height={400}
      class='rounded h-full w-full object-cover'
    />
  </div>
  <p class='silkscreen'>{description}</p>
  <slot />
</Card>
