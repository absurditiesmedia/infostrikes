---
interface Props {
  color?: string | undefined;
  color_hover?: string | undefined;
}
import colors from '../../config/colors.json';

if (Astro.props.color === undefined) {
  Astro.props.color =
    colors[Math.floor(Math.random() * colors.length)];
  Astro.props.color_hover =
    colors[Math.floor(Math.random() * colors.length)];
}

const { color, color_hover } = Astro.props;
---

<style define:vars={{ color: color, color_hover: color_hover }}>
  span.brutal-pill {
    filter: drop-shadow(3px 3px 0 rgb(0 0 0 / 1));
    user-select: none;
    background-color:var(--color);
    border-radius: 9999px;
    border: 2px solid black;
    padding: 0.25rem 0.75rem;
    transition: all;
    transition-duration: 0.5s;
    animation: ease-in-out;
    font-size: small;
  }

  span.brutal-pill:hover {
    filter: drop-shadow(5px 5px 0 rgb(0 0 0 / 1));
    background-color: var(--color_hover);
  }
</style>

<span class=' silkscreen brutal-pill'>
  <slot />
</span>
